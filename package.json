    "react-router-dom": "^6.23.1",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "cross-env": "^7.0.3",
    "cypress": "^13.12.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "playwright": "^1.44.1",
    "serve-static": "^1.15.0",
