{
  "name": "playwright-supertest-e2e",
  "private": true,
  "version": "1.0.0",
  "author": "Chung Minh Tu",
  "scripts": {
    "dev:backend": "nodemon ./backend/server.js",
    "test:backend": "cross-env NODE_ENV=backend_e2e jest",
    "dev:frontend": "vite --open",
    "build:frontend": "vite build",
